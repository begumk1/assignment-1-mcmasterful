{
    "name": "assignment-1",
    "version": "1.0.0",
    "description": "This is a template repository for the first assignment in BVD 103 at McMaster Continuing Education.",
    "main": "index.js",
    "scripts": {
        "prebuild": "./generate-openapi.sh",
        "start-server": "npm run generate-openapi && ts-node src/server.ts",
        "start-tsoa": "npm run generate-openapi && ts-node src/server-tsoa.ts",
        "lint": "npm run generate-openapi && eslint . --ext .ts",
        "lint:fix": "npm run generate-openapi && eslint . --ext .ts --fix",
        "format": "prettier --write .",
        "type-check": "npm run generate-openapi && tsc --noEmit",
        "build": "tsc",
        "test": "npm run lint && npm run type-check",
        "test:watch": "vitest",
        "test:ci": "vitest run",
        "test:unit": "vitest run --config vitest.unit.config.ts",
        "test:api": "vitest run --config vitest.api.config.ts",
        "generate-routes": "npx tsoa spec-and-routes",
        "generate-openapi": "./generate-openapi.sh"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "@koa/cors": "^5.0.0",
        "@koa/router": "^12.0.1",
        "koa": "^2.15.3",
        "koa-bodyparser": "^4.4.1",
        "koa-qs": "^3.0.0",
        "koa-router": "^13.0.1",
        "koa-zod-router": "^2.3.0",
        "koa2-swagger-ui": "^5.10.3",
        "mongodb": "^6.3.0",
        "tsx": "^4.19.1",
        "tsoa": "^5.2.0",
        "zod": "^3.23.8"
    },
    "devDependencies": {
        "@openapitools/openapi-generator-cli": "^2.7.0",
        "@types/koa": "^2.15.0",
        "@types/koa__cors": "^5.0.0",
        "@types/koa-qs": "^2.0.3",
        "@types/koa-router": "^7.4.8",
        "@types/node": "^22.5.5",
        "@typescript-eslint/eslint-plugin": "^6.0.0",
        "@typescript-eslint/parser": "^6.0.0",
        "@vitest/ui": "^3.2.4",
        "eslint": "^8.0.0",
        "mongodb-memory-server": "^9.5.0",
        "prettier": "^3.0.0",
        "ts-node": "^10.9.2",
        "typescript": "^5.6.2",
        "vitest": "^3.2.4"
    }
}
