{
    "entryFile": "src/app.ts",
    "noImplicitAdditionalProperties": "throw-on-extras",
    "controllerPathGlobs": ["src/**/*.route.ts"],
    "spec": {
        "outputDirectory": "build",
        "specVersion": 3,
        "basePath": "/api",
        "securityDefinitions": {
            "api_key": {
                "type": "apiKey",
                "name": "access_token",
                "in": "query"
            }
        }
    },
    "routes": {
        "routesDir": "build",
        "middleware": "koa"
    }
}
